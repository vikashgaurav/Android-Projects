<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.grv.vikash.smartrip.ForAdmin.Admin"
    tools:showIn="@layout/activity_admin"
    android:padding="16dp"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add on Trains"
        android:background="#1571d3"
        android:textColor="#fff"
        android:id="@+id/addTrain"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add on Flights"
        android:layout_marginTop="16dp"
        android:background="#1571d3"
        android:textColor="#fff"
        android:id="@+id/addFlights"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add on Buses"
        android:layout_marginTop="16dp"
        android:background="#1571d3"
        android:textColor="#fff"
        android:id="@+id/addBuses"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check User Feedback"
        android:layout_marginTop="16dp"
        android:id="@+id/checkuserFeedback"
        android:background="#fff"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#585757"
        android:padding="16dp"
        />

</LinearLayout>
