<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_search__flights"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.grv.vikash.smartrip.Activity_Flights.Search_Flights"
    tools:showIn="@layout/activity_search__flights">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:id="@+id/lilay"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_marginTop="16dp"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="50dp"
                android:hint="From"
                android:textSize="30sp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:background="#fff"
                android:id="@+id/searchSourceFlightET"
                />
            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_swap_horiz_black_24dp"
                android:layout_gravity="center"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="50dp"
                android:hint="To"
                android:textSize="30sp"
                android:gravity="right"
                android:paddingRight="16dp"
                android:background="#fff"
                android:id="@+id/searchDestiantionFlightET"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e3e3"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Depart On"
            android:textSize="18sp"
            android:padding="16dp"
            android:id="@+id/datepicSearchflights"
            android:background="#fff"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e3e3"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class"
            android:textSize="18sp"
            android:padding="16dp"
            android:id="@+id/classFlight"
            android:background="#fff"
            android:textColor="#454444"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e3e3"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Flights"
            android:layout_margin="16dp"
            android:background="#1571d3"
            android:textColor="#fff"
            android:id="@+id/searchBtnFlight"
            />
    </LinearLayout>


</RelativeLayout>
