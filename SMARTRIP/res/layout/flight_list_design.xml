<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IndiGo"
        android:id="@+id/flightName"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/flightName"
        android:text="6E 6612"
        android:layout_marginLeft="10dp"
        android:id="@+id/flightNo"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_below="@id/flightName"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/lay"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.1"
            android:text="New Delhi"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="right"
            android:id="@+id/sourceFlight"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="->"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.1"
            android:text="Patna"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="left"
            android:id="@+id/destinationFlight"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay"
        android:text="05:35"
        android:id="@+id/sourceFlightTime"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay"
        android:layout_toRightOf="@id/sourceFlightTime"
        android:text="->"
        android:id="@+id/arrow"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay"
        android:layout_toRightOf="@id/arrow"
        android:text="06:50"
        android:id="@+id/destinationFlightTime"
        android:layout_marginLeft="10dp"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sourceFlightTime"
        android:layout_marginTop="10dp"
        android:id="@+id/tableLAy"
        >
        <TableRow>

            <TextView
                android:text="S"
                android:id="@+id/sunF"
                />

            <TextView
                android:text="M"
                android:id="@+id/monF"
                android:layout_marginLeft="4dp"
                />

            <TextView
                android:text="T"
                android:id="@+id/tueF"
                android:layout_marginLeft="4dp"
                />

            <TextView
                android:text="W"
                android:id="@+id/wedF"
                android:layout_marginLeft="4dp"
                />

            <TextView
                android:text="T"
                android:id="@+id/thuF"
                android:layout_marginLeft="4dp"
                />

            <TextView
                android:text="F"
                android:id="@+id/friF"
                android:layout_marginLeft="4dp"
                />

            <TextView
                android:text="S"
                android:id="@+id/satF"
                android:layout_marginLeft="4dp"
                />
        </TableRow>

    </TableLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tableLAy"
        android:text="â‚¹"
        android:layout_marginTop="10dp"
        android:id="@+id/rupees"
        android:textColor="#000"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="225"
        android:textColor="#000"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/fareFlight"
        android:layout_alignBaseline="@+id/rupees"
        android:layout_alignBottom="@+id/rupees"
        android:layout_toRightOf="@+id/rupees"/>


</RelativeLayout>